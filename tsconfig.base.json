{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@company/shared/models": ["libs/shared/models/src/index.ts"],
      "@company/shared/session": ["libs/shared/session/src/index.ts"],
      "@company/user/profile": ["libs/user/profile/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
